<%- include('header.ejs') %> 
<% if (currentUser) {%>
<h1><%= currentUser.username %>'s Drive</h1>
<form method="post">
  <h2>Are you sure you want to delete this folder?</h2>
  <h3>Name: <%= folder.name %></h3>
  <h3>Id: <%= folder.id %></h3>
  <button type="submit">Delete Folder</button>
  <a href="/drive"><button type="button">Cancel</button></a>
</form>
<% } else { %>
<p>Please log in</p>
<%}%> <%- include('footer.ejs') %>
