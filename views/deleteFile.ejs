<%- include('header.ejs') %> 
<% if (currentUser) {%>
<h1><%= currentUser.username %>'s Drive</h1>
<form method="post">
  <h2>Are you sure you want to delete this file?</h2>
  <h3>Name: <%= file.originalName %></h3>
  <h3>Size: <%= file.size %> Bytes</h3>
  <h3>Upload Time: <%= file.uploadTime %></h3>
  <h3>Id: <%= file.id %></h3>
  <button type="submit">Delete File</button>
  <a href="/drive"><button type="button">Cancel</button></a>
</form>
<% } else { %>
<p>Please log in</p>
<%}%> <%- include('footer.ejs') %>
